<UserControl x:Class="GRPExplorerGUI.View.BigFileFolderTree"
             x:Name="BigFileFolderTreeComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GRPExplorerGUI.View"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="White">
        <DockPanel LastChildFill="True" Margin="0">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="btnUpFolder" Content="Up" Click="btnUpFolder_Click"/>
                    <Label Content="{Binding Path=CurrentFolder.FullDirectoryName}" VerticalAlignment="Top" HorizontalAlignment="Center"/>
                </StackPanel>
                <ListBox x:Name="listBox" ItemsSource="{Binding Path=CurrentFolder.SubFolders}" ScrollViewer.VerticalScrollBarVisibility="Visible">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding Path=Name}" Click="Button_Click"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
            <DockPanel Height="300" LastChildFill="False" VerticalAlignment="Top" HorizontalAlignment="Right"/>
        </DockPanel>

    </Grid>
</UserControl>
