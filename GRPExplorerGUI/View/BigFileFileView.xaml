<UserControl x:Class="GRPExplorerGUI.View.BigFileFileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GRPExplorerGUI.View"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Rectangle Fill="#FFF4F4F5" Margin="0" Stroke="Black"/>
        <GroupBox x:Name="groupBox" Header="{Binding Path=BigFileFile.Name}" Height="200" Margin="0" VerticalAlignment="Top">
            <StackPanel Orientation="Vertical">
                <StackPanel.Triggers>
                    
                </StackPanel.Triggers>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Key: "/>
                    <TextBox IsReadOnly="True" Text="{Binding Path=BigFileFile.FileInfo.Key, StringFormat='0x{0:X8}'}"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

    </Grid>
</UserControl>
